@model ColegioSanJose.Models.DB.Alumno

@{
    ViewData["Title"] = "Crear Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Encabezado -->
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-person-plus-fill text-success display-6 me-2"></i>
                <h2 class="fw-bold text-success mb-0">Crear Alumno</h2>
            </div>

            <!-- Formulario -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">
                                <i class="bi bi-person-fill me-1"></i> Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del alumno" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label fw-semibold">
                                <i class="bi bi-person-lines-fill me-1"></i> Apellido
                            </label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido del alumno" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaNacimiento" class="form-label fw-semibold">
                                <i class="bi bi-calendar-date-fill me-1"></i> Fecha de Nacimiento
                            </label>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Grado" class="form-label fw-semibold">
                                <i class="bi bi-mortarboard-fill me-1"></i> Grado
                            </label>
                            <input asp-for="Grado" class="form-control" placeholder="Ejemplo: Noveno Grado" />
                            <span asp-validation-for="Grado" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Crear Alumno
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>