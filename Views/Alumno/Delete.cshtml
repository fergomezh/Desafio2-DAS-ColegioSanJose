@model ColegioSanJose.Models.DB.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-exclamation-triangle-fill text-danger display-6 me-2"></i>
                <h2 class="fw-bold text-danger mb-0">Confirmar Eliminación</h2>
            </div>

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white fw-semibold">
                    <i class="bi bi-person-x-fill me-1"></i> Alumno a eliminar
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-fill me-1"></i> Nombre
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-lines-fill me-1"></i> Apellido
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-calendar-date-fill me-1"></i> Fecha de Nacimiento
                        </dt>
                        <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-mortarboard-fill me-1"></i> Grado
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Grado)</dd>
                    </dl>
                </div>
            </div>

            <!-- Advertencia si tiene expedientes -->
            @if (Model.Expedientes != null && Model.Expedientes.Any())
            {
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                    <strong>Atención:</strong> Este alumno tiene <strong>@Model.Expedientes.Count()</strong> expedientes asociados.
                    <br />
                    Si confirmas la eliminación, también se eliminarán todos sus expedientes.
                </div>
            }

            <!-- Formulario de confirmación -->
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="AlumnoId" />
                <input type="hidden" name="eliminarConExpedientes" value="true" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-1"></i> Eliminar Alumno
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>