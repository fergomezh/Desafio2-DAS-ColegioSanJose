@model ColegioSanJose.Models.DB.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-danger">¿Estás seguro que deseas eliminar este alumno?</h2>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Alumno</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4">Fecha de Nacimiento</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                        <dt class="col-sm-4">Grado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Grado)</dd>
                    </dl>
                </div>
            </div>

            @if (Model.Expedientes != null && Model.Expedientes.Any())
            {
                <div class="alert alert-warning mt-3">
                    <strong>Atención:</strong> Este alumno tiene <strong>@Model.Expedientes.Count()</strong> expedientes asociados.
                    <br />
                    Si confirmas la eliminación, también se eliminarán todos sus expedientes.
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="AlumnoId" />
                <input type="hidden" name="eliminarConExpedientes" value="true" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>