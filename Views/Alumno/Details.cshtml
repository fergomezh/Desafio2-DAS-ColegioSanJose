@model ColegioSanJose.Models.DB.Alumno

@{
    ViewData["Title"] = "Detalles del Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-person-badge-fill text-info display-6 me-2"></i>
                <h2 class="fw-bold text-info mb-0">Detalles del Alumno</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-fill me-1"></i> Nombre
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-lines-fill me-1"></i> Apellido
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-calendar-date-fill me-1"></i> Fecha de Nacimiento
                        </dt>
                        <dd class="col-sm-8">
                            @Model.FechaNacimiento.ToString("dd/MM/yyyy")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-mortarboard-fill me-1"></i> Grado
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Grado)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.AlumnoId" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>