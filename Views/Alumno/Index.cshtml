@model IEnumerable<ColegioSanJose.Models.DB.Alumno>

@{
    ViewData["Title"] = "Listado de Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Listado de Alumnos</h2>
        <a asp-action="Create" class="btn btn-success">Agregar Alumno</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha de Nacimiento</th>
                <th>Grado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Grado)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-primary me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-info text-white me-1">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.AlumnoId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>