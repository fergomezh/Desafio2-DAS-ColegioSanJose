@model ColegioSanJose.Models.DB.Expediente

@{
    ViewData["Title"] = "Crear Expediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-folder-plus text-success display-6 me-2"></i>
                <h2 class="fw-bold text-success mb-0">Crear Expediente</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="AlumnoId" class="form-label fw-semibold">
                                <i class="bi bi-person-fill me-1"></i> Alumno
                            </label>
                            <select asp-for="AlumnoId" class="form-select" asp-items="ViewBag.AlumnoId">
                                <option value="">Seleccione un alumno</option>
                            </select>
                            <span asp-validation-for="AlumnoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MateriaId" class="form-label fw-semibold">
                                <i class="bi bi-journal-bookmark-fill me-1"></i> Materia
                            </label>
                            <select asp-for="MateriaId" class="form-select" asp-items="ViewBag.MateriaId">
                                <option value="">Seleccione una materia</option>
                            </select>
                            <span asp-validation-for="MateriaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NotaFinal" class="form-label fw-semibold">
                                <i class="bi bi-bar-chart-fill me-1"></i> Nota Final
                            </label>
                            <input asp-for="NotaFinal" class="form-control" type="number" step="0.01" min="0" max="100"
                                   placeholder="Ingrese la nota final (0 - 100)" />
                            <span asp-validation-for="NotaFinal" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label fw-semibold">
                                <i class="bi bi-chat-left-text-fill me-1"></i> Observaciones
                            </label>
                            <textarea asp-for="Observaciones" class="form-control" rows="4" maxlength="500"
                                      placeholder="Ingrese observaciones (máximo 500 caracteres)"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Crear Expediente
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>