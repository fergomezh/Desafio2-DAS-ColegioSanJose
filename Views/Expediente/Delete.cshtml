@model ColegioSanJose.Models.DB.Expediente

@{
    ViewData["Title"] = "Eliminar Expediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-danger">¿Estás seguro que deseas eliminar este expediente?</h2>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Expediente</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Alumno</dt>
                        <dd class="col-sm-8">@Model.Alumno.Nombre @Model.Alumno.Apellido</dd>

                        <dt class="col-sm-4">Materia</dt>
                        <dd class="col-sm-8">@Model.Materia.NombreMateria</dd>

                        <dt class="col-sm-4">Nota Final</dt>
                        <dd class="col-sm-8">@Model.NotaFinal</dd>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <dt class="col-sm-4">Observaciones</dt>
                            <dd class="col-sm-8">@Model.Observaciones</dd>
                        }
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ExpedienteId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>