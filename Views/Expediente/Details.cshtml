@model ColegioSanJose.Models.DB.Expediente

@{
    ViewData["Title"] = "Detalles del Expediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-folder2-open text-info display-6 me-2"></i>
                <h2 class="fw-bold text-info mb-0">Detalles del Expediente</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-3">
                        <i class="bi bi-info-circle-fill me-2"></i> Información del Expediente
                    </h5>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-fill me-1"></i> Alumno
                        </dt>
                        <dd class="col-sm-8">@Model.Alumno.Nombre @Model.Alumno.Apellido</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-journal-bookmark-fill me-1"></i> Materia
                        </dt>
                        <dd class="col-sm-8">@Model.Materia.NombreMateria</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-bar-chart-fill me-1"></i> Nota Final
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.NotaFinal >= 6)
                            {
                                <span class="badge bg-success">@Model.NotaFinal</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@Model.NotaFinal</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="alert alert-info mt-4">
                            <h6 class="alert-heading">
                                <i class="bi bi-chat-left-text-fill me-1"></i> Observaciones
                            </h6>
                            <p class="mb-0">@Model.Observaciones</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary mt-4">
                            <i class="bi bi-dash-circle me-1"></i>
                            <em>Sin observaciones registradas.</em>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ExpedienteId" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
            </div>

        </div>
    </div>
</div>