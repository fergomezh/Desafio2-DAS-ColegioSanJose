@model ColegioSanJose.Models.DB.Expediente

@{
    ViewData["Title"] = "Detalles del Expediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Detalles del Expediente</h2>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary">Información del Expediente</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Alumno</dt>
                        <dd class="col-sm-8">@Model.Alumno.Nombre @Model.Alumno.Apellido</dd>

                        <dt class="col-sm-4">Materia</dt>
                        <dd class="col-sm-8">@Model.Materia.NombreMateria</dd>

                        <dt class="col-sm-4">Nota Final</dt>
                        <dd class="col-sm-8">@Model.NotaFinal</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="alert alert-info mt-4">
                            <h5 class="alert-heading">Observaciones</h5>
                            <p class="mb-0">@Model.Observaciones</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary mt-4">
                            <em>Sin observaciones registradas.</em>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ExpedienteId" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>