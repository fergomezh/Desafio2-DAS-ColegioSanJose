@model IEnumerable<ColegioSanJose.Models.ViewModels.ExpedienteViewModel>

@{
    ViewData["Title"] = "Listado de Expedientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-folder2-open me-2"></i> Listado de Expedientes
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Agregar Expediente
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-2"></i>
            No hay expedientes registrados actualmente.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th><i class="bi bi-person-fill me-1"></i> Alumno</th>
                            <th><i class="bi bi-journal-bookmark-fill me-1"></i> Materia</th>
                            <th><i class="bi bi-bar-chart-fill me-1"></i> Nota Final</th>
                            <th><i class="bi bi-chat-left-text-fill me-1"></i> Observaciones</th>
                            <th class="text-center"><i class="bi bi-gear-fill me-1"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreCompleto</td>
                                <td>@item.NombreMateria</td>
                                <td>
                                    @if (item.NotaFinal >= 60)
                                    {
                                        <span class="badge bg-success">@item.NotaFinal</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.NotaFinal</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Observaciones))
                                    {
                                        @item.Observaciones
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sin observaciones</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ExpedienteId"
                                       class="btn btn-sm btn-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ExpedienteId"
                                       class="btn btn-sm btn-info text-white me-1" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ExpedienteId"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>