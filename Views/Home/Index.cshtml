@{
    ViewData["Title"] = "Colegio San José";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">Colegio San José</h1>
        <p class="lead">Formando estudiantes con excelencia académica, valores y compromiso social.</p>
    </div>

    <!-- Enlaces principales -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Inicio</h3>
                        <p class="card-text">Regresa a la página principal del Colegio San José.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Privacidad</h3>
                        <p class="card-text">Consulta nuestra política de privacidad y uso de datos.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Alumno" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Alumnos</h3>
                        <p class="card-text">Explora el listado de alumnos registrados en el colegio.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Materia" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Materias</h3>
                        <p class="card-text">Consulta las materias impartidas en el colegio.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Expediente" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Expedientes</h3>
                        <p class="card-text">Accede a los expedientes académicos de los alumnos.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-controller="Expediente" asp-action="PromedioPorAlumno" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Promedios por Alumno</h3>
                        <p class="card-text">Visualiza el promedio de notas agrupado por alumno.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

</div>