@model ColegioSanJose.Models.DB.Materia

@{
    ViewData["Title"] = "Detalles de la Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-journal-bookmark-fill text-info display-6 me-2"></i>
                <h2 class="fw-bold text-info mb-0">Detalles de la Materia</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-book me-1"></i> Nombre de la Materia
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreMateria)</dd>

                        <dt class="col-sm-4 fw-semibold">
                            <i class="bi bi-person-badge-fill me-1"></i> Docente Asignado
                        </dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Docente)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver a la lista
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.MateriaId" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
            </div>

        </div>
    </div>
</div>