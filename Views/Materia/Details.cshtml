@model ColegioSanJose.Models.DB.Materia

@{
    ViewData["Title"] = "Detalles de la Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Detalles de la Materia</h2>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre de la Materia</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreMateria)</dd>

                        <dt class="col-sm-4">Docente Asignado</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Docente)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                <a asp-action="Edit" asp-route-id="@Model?.MateriaId" class="btn btn-primary">Editar</a>
            </div>
        </div>
    </div>
</div>