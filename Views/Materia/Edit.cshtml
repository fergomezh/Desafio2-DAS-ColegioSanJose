@model ColegioSanJose.Models.DB.Materia

@{
    ViewData["Title"] = "Editar Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-journal-text text-primary display-6 me-2"></i>
                <h2 class="fw-bold text-primary mb-0">Editar Materia</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MateriaId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="NombreMateria" class="form-label fw-semibold">
                                <i class="bi bi-book me-1"></i> Nombre de la Materia
                            </label>
                            <input asp-for="NombreMateria" class="form-control" placeholder="Ejemplo: Matemáticas" />
                            <span asp-validation-for="NombreMateria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Docente" class="form-label fw-semibold">
                                <i class="bi bi-person-badge-fill me-1"></i> Docente Asignado
                            </label>
                            <input asp-for="Docente" class="form-control" placeholder="Nombre del docente" />
                            <span asp-validation-for="Docente" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>